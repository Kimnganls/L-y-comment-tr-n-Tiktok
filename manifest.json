{
  "manifest_version": 3,
  "name": "TikTok Comment Analyzer",
  "version": "1.0.3",
  "description": "Thu thập bình luận TikTok (kèm replies) và xuất Excel",
  "permissions": ["activeTab", "storage", "scripting", "downloads"],
  "host_permissions": ["*://*.tiktok.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TikTok Comment Analyzer"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tiktok.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
